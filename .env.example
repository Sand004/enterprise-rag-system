# Environment Configuration Template
# Copy this file to .env and update with your values

# General Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Atlassian Integration
ATLASSIAN_BASE_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=your-email@company.com
ATLASSIAN_API_TOKEN=your_atlassian_api_token

# Database Configuration
VECTOR_DB_TYPE=qdrant  # Options: qdrant, pgvector
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# PostgreSQL (for pgvector)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_vectors
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# LLM Configuration
LLM_PROVIDER=vllm  # Options: vllm, ollama, openai
VLLM_ENDPOINT=http://localhost:8000
VLLM_MODEL=meta-llama/Llama-3.3-70B-Instruct
VLLM_QUANTIZATION=awq

# Security
MASTER_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=rag-documents

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Application Settings
API_PORT=8080
WORKER_COUNT=4
MAX_CHUNK_SIZE=1024
CHUNK_OVERLAP=256
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# Feature Flags
ENABLE_GRAPHRAG=true
ENABLE_MULTI_AGENT=true
ENABLE_CACHING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600
VECTOR_SEARCH_TOP_K=10
RERANKING_TOP_K=5